<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/single_check_result">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/pin_description"
                android:layout_marginStart="0dp" android:layout_marginTop="0dp"
                android:textSize="18sp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp" android:id="@+id/connections"
                android:layout_marginTop="0dp" android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>