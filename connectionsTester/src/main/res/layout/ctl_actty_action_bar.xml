<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/ctl_actty_actionBar_text"
            android:textSize="18sp"
            android:layout_alignBaseline="@id/button_at_custom_action_bar"
            android:textAlignment="textStart"
            android:layout_toStartOf="@id/ctl_actty_warning_sign"
            />

    <ImageView
            android:id="@+id/ctl_actty_warning_sign"
            android:visibility="invisible"
            android:layout_height="35sp"
            android:layout_width="35sp"
            app:srcCompat="@mipmap/warning"
            android:layout_alignParentEnd="false"
            android:layout_toStartOf="@id/button_at_custom_action_bar"
            android:baselineAlignBottom="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"/>

    <Button
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_at_custom_action_bar"
            android:layout_alignParentEnd="true"
            />
</RelativeLayout>